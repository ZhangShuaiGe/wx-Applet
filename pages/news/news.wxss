/* pages/news/news.wxss */
.banner{
  width: 100%;
  height: 100%;
}
.nav{
  display: flex;
  justify-content: space-around;
  text-align: center;
  font-size: 26rpx;
  padding: 26rpx 0;
  background: #fff;
  margin: 14rpx 0;
}
.nav_img{
  width: 78rpx;
  height: 72rpx;
  margin-bottom:14rpx;
}
page{
  background: #e7ecef;
}
.course_box{
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  background: #fff;
  padding-top: 18rpx;
}
.course_box image{
  width: 350rpx;
  height: 150rpx;
  margin-bottom: 18rpx;
  border-radius: 10rpx;
}
.course_box image:nth-of-type(2n-1){
  margin-right: 20rpx;
}
.test_box button{
  margin: 5px;
}
